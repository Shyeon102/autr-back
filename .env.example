APP_NAME=AUTR Backend
APP_VERSION=0.1.0
HOST=0.0.0.0
PORT=8000

BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here
BYBIT_TESTNET=true

MAX_TRADE_AMOUNT_USD=30.0
MIN_ORDER_SIZE_USD=5.0
MAX_POSITION_PERCENTAGE=80.0
STOP_LOSS_PERCENTAGE=5.0

ADMIN_API_KEY=changeme_admin_key

# TRADING_STRATEGY는 .env 불필요 — autr --strategy 명령어로 Redis에서 관리
# 초기 기본값: regime_trend
STRATEGY_SYMBOL=BTCUSDT
STRATEGY_INTERVAL=15
STRATEGY_LOOKBACK_BARS=260
STRATEGY_EMA_FAST=50
STRATEGY_EMA_SLOW=200
STRATEGY_MIN_TREND_GAP_PCT=0.001
STRATEGY_ATR_PERIOD=14
STRATEGY_INITIAL_STOP_ATR_MULT=2.5
STRATEGY_TRAILING_STOP_ATR_MULT=3.0
STRATEGY_LOOP_SECONDS=60
STRATEGY_COOLDOWN_BARS=2

CORS_ORIGINS=https://autotr.vercel.app

# --- Database ---
# dev: sqlite:///./data/trades.db  (기본값, DATABASE_URL 미설정 시)
# prod: postgresql://autr:autr@postgres:5432/autr
DATABASE_URL=postgresql://autr:autr@postgres:5432/autr
POSTGRES_DB=autr
POSTGRES_USER=autr
POSTGRES_PASSWORD=autr

# --- Redis ---
# dev: 미설정 시 in-memory fallback
# prod: redis://redis:6379/0
REDIS_URL=redis://redis:6379/0

# --- Quant Data Directory (bind mount) ---
# 기존 quant_timeseries.db가 있는 호스트 경로
# collector / strategy_consumer 컨테이너의 /app/data 로 마운트됨
QUANT_DATA_DIR=/home/ubuntu/auto-tr/backend/data
QUANT_DB_PATH=/app/data/quant_timeseries.db
# dual_timeframe 전략 사용 시 30분봉도 수집 필요
DATA_PIPELINE_INTERVALS=1,5,15,30,60
